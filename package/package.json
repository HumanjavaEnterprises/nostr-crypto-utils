{
  "name": "nostr-crypto-utils",
  "version": "0.2.0",
  "description": "A comprehensive TypeScript library providing cryptographic utilities and protocol-compliant message handling for Nostr applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "docs": "typedoc --out docs src/index.ts",
    "docs:serve": "npx serve docs"
  },
  "keywords": [
    "nostr",
    "crypto",
    "utilities",
    "typescript",
    "encryption",
    "event-handling",
    "nip-01",
    "nip-04"
  ],
  "author": "vveerrgg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HumanjavaEnterprises/nostr-crypto-utils.git"
  },
  "bugs": {
    "url": "https://github.com/HumanjavaEnterprises/nostr-crypto-utils/issues"
  },
  "homepage": "https://github.com/HumanjavaEnterprises/nostr-crypto-utils#readme",
  "dependencies": {
    "@noble/curves": "^1.3.0",
    "@noble/hashes": "^1.3.3",
    "@noble/secp256k1": "^2.0.0",
    "nostr-tools": "^1.17.0",
    "pino": "^8.17.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "pino-pretty": "^10.3.0",
    "prettier": "^3.1.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
