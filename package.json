{
  "name": "nostr-crypto-utils",
  "version": "0.4.16",
  "description": "Core cryptographic utilities for Nostr protocol",
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "examples/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:cjs && npm run build:esm && npm run build:browser",
    "build:types": "tsc -p tsconfig.types.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:browser": "webpack --config webpack.config.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "nostr",
    "crypto",
    "cryptography",
    "utilities",
    "typescript"
  ],
  "author": "vveerrgg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HumanjavaEnterprises/nostr-crypto-utils.git"
  },
  "bugs": {
    "url": "https://github.com/HumanjavaEnterprises/nostr-crypto-utils/issues"
  },
  "homepage": "https://github.com/HumanjavaEnterprises/nostr-crypto-utils#readme",
  "dependencies": {
    "@noble/curves": "^1.9.7",
    "@noble/hashes": "^1.8.0",
    "assert": "^2.1.0",
    "bech32": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "path-browserify": "^1.0.1",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@eslint/js": "^9.27.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.27.0",
    "rimraf": "^5.0.10",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "webpack": "^5.105.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
