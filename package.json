{
  "name": "nostr-crypto-utils",
  "version": "0.4.14",
  "description": "Core cryptographic utilities for Nostr protocol",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./crypto": {
      "import": "./dist/esm/crypto.js",
      "require": "./dist/cjs/crypto.js",
      "types": "./dist/esm/crypto.d.ts"
    },
    "./validation": {
      "import": "./dist/esm/validation/index.js",
      "require": "./dist/cjs/validation/index.js",
      "types": "./dist/esm/validation/index.d.ts"
    },
    "./protocol": {
      "import": "./dist/esm/protocol/index.js",
      "require": "./dist/cjs/protocol/index.js",
      "types": "./dist/esm/protocol/index.d.ts"
    },
    "./nips": {
      "import": "./dist/esm/nips/index.js",
      "require": "./dist/cjs/nips/index.js",
      "types": "./dist/esm/nips/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:browser",
    "build:ts": "tsc && tsc -p tsconfig.cjs.json",
    "build:browser": "webpack --config webpack.config.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build"
  },
  "keywords": [
    "nostr",
    "crypto",
    "cryptography",
    "utilities",
    "typescript"
  ],
  "author": "Humanjava Enterprises",
  "license": "MIT",
  "dependencies": {
    "@noble/curves": "^1.2.0",
    "@noble/hashes": "^1.3.2",
    "assert": "^2.1.0",
    "bech32": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "path-browserify": "^1.0.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
