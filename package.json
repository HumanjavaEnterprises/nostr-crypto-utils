{
  "name": "nostr-crypto-utils",
  "version": "0.4.8",
  "description": "A comprehensive TypeScript library for Nostr protocol implementation, supporting multiple NIPs with strict validation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx serve docs",
    "predeploy": "npm run docs",
    "deploy:docs": "gh-pages -d docs"
  },
  "keywords": [
    "nostr",
    "crypto",
    "utilities",
    "typescript",
    "encryption",
    "event-handling",
    "nip-01",
    "nip-02",
    "nip-03",
    "nip-04",
    "nip-05",
    "nip-06",
    "nip-07",
    "nip-19",
    "bech32"
  ],
  "author": "vveerrgg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HumanjavaEnterprises/nostr-crypto-utils.git"
  },
  "bugs": {
    "url": "https://github.com/HumanjavaEnterprises/nostr-crypto-utils/issues"
  },
  "homepage": "https://github.com/HumanjavaEnterprises/nostr-crypto-utils#readme",
  "dependencies": {
    "@noble/curves": "^1.3.0",
    "@noble/hashes": "^1.3.3",
    "@noble/secp256k1": "^2.0.0",
    "bech32": "^2.0.0",
    "pino": "^8.17.1",
    "buffer": "^6.0.3",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "gh-pages": "^6.2.0",
    "prettier": "^3.1.1",
    "typedoc": "^0.27.0",
    "typedoc-plugin-markdown": "^4.3.3",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0",
    "@types/crypto-js": "^4.2.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
